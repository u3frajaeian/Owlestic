<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/fragmentSearch"
        android:name="com.u3f.owlesticchallenge.presentation.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search"
    >
        <action
            android:id="@+id/action_fragmentHome_to_profileFragment"
            app:destination="@id/profileFragment" >
            <argument android:name="userData"
                app:argType="com.u3f.owlesticchallenge.domain.model.search.UserModel"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/fragmentFavourite"
        android:name="com.u3f.owlesticchallenge.presentation.favorite.FavouriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favorite"
        />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.u3f.owlesticchallenge.presentation.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash"
        >
        <action
            android:id="@+id/action_splashFragment_to_fragmentHome"
            app:destination="@id/fragmentSearch"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.u3f.owlesticchallenge.presentation.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile"
        android:label="ProfileFragment"
        app:popUpTo="@id/fragmentSearch"
        app:popUpToInclusive="true">
        <argument android:name="userData"
            app:argType="com.u3f.owlesticchallenge.domain.model.search.UserModel"/>
        <action
            android:id="@+id/action_profileFragment_to_followersFragment"
            app:destination="@id/followersFragment" />
    </fragment>
    <fragment
        android:id="@+id/followersFragment"
        android:name="com.u3f.owlesticchallenge.presentation.users.following.FollowingFragment"
        android:label="FollowersFragment"
        tools:layout="@layout/fragment_follower"/>
    <action
        android:id="@+id/toFavourite"
        app:destination="@id/fragmentFavourite"

        />
</navigation>